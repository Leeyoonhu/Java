<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org/DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace = "org.conan.mapper.ReplyMapper">
	<insert id="insert">
   	  insert into tbl_reply(bno, reply, replyer)
   	  values(#{bno}, #{reply}, #{replyer});
   	  <!-- 
	   	  PreparedStatement 에서 set(?, ?, ?)의 역할
	   	  ? ? ? 에 getTitle, getContent, getWriter 한거라서 beans 필드이름이 table 열이름과 동일하면 편함
   	   -->
   </insert>
   <select id="read" resultType="org.conan.domain.ReplyVO">
   		select * from tbl_reply where rno=#{rno};
   </select>
   <update id="update">
   		update tbl_reply set reply =#{reply}, updateDate = now() where rno=#{rno};
   </update>
   <delete id="delete">
   		delete from tbl_reply where rno=#{rno};
   </delete>
   <select id="getListByBno" resultType="org.conan.domain.ReplyVO">
   		select * from tbl_reply where bno=#{bno};
   </select>
</mapper>